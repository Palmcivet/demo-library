{
    "presets": [
        [
            "@babel/preset-env",
            {
                "modules": false,
                "useBuiltIns": "usage",
                "corejs": "3"
            }
        ],
        [
            "@babel/preset-typescript"
        ]
    ],
    "plugins": [
        [
            "@babel/plugin-proposal-decorators",
            {
                "legacy": true
            }
        ],
        [
            "@babel/proposal-class-properties",
            {
                "loose": true
            }
        ],
        // [
        //     "babel-plugin-transform-typescript-metadata"
        // ],
        [
            "babel-plugin-parameter-decorator"
        ]
    ]
}