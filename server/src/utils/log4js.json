{
    "appenders": {
        "ruleConsole": {
            "type": "console"
        },
        "ruleFile": {
            "type": "dateFile",
            "filename": "build/logs/app-",
            "pattern": "yyyy-MM-dd.log",
            "maxLogSize": 1000000,
            "numBackups": 3,
            "alwaysIncludePattern": true
        }
    },
    "disableClustering": true,
    "replaceConsole": true,
    "categories": {
        "default": {
            "appenders": [
                "ruleFile"
            ],
            "level": "info"
        }
    }
}